<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_toolbar"/>

    <!-- fragment displayed here -->
    <fragment
        android:name="com.example.spotifystreamer.activities.ArtistsFragment"
        android:id="@+id/fragment_artist_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>


    <fragment
        android:name="com.example.spotifystreamer.activities.TracksFragment"
        android:id="@+id/fragment_tracks_list"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"/>


</LinearLayout>
